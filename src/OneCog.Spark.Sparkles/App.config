<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="sparklesConfig" type="SimpleConfig.Section, SimpleConfig" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <sparklesConfig>
    <elasticSearch host="#{ElasticSearchHost}">
      <indexes>
        <index name="spark" appendDate="true" dateFormat="yyyy.MM.dd" />
      </indexes>
    </elasticSearch>
    <sparkCore accessToken="#{AccessToken}" defaultInterval="00:00:05" defaultIndexName="spark" defaultType="spark">
      <devices>
        <device id="FirstCore" defaultInterval="00:00:05" defaultIndexName="spark" defaultType="spark">
          <variables>
            <variable name="temperature" interval="00:00:05" indexName="spark" type="spark" omitDuplicateReadings="true" />
            <variable name="moistureA" interval="00:00:05" indexName="spark" type="spark" omitDuplicateReadings="true" />
            <variable name="moistureB" interval="00:00:05" indexName="spark" type="spark" omitDuplicateReadings="true" />
          </variables>
        </device>
      </devices>
    </sparkCore>
  </sparklesConfig>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>